
.new_box{
    height: 100%;
    width: 100%
}
.new_headline{
    height: 120rpx;
    width: 100%;
    border-bottom: 1px #ccc solid;
    margin-top: 40rpx;
}
.new_name{
    height: 50rpx;
    width: 100%;
    text-align: center;
    font-size: 30rpx;
    font-weight: bold;
    color: #333
}
.new_time{
    display: flex;
    width: 90%;
    margin-left: 5%;
    margin-top: 20rpx;
    font-size: 25rpx;
    color: #9999
}
.date{
    width: 65%;
    display: inline-block;
}
.people{
    width: 35%;
    display: inline-block;
    color: #9999;
    text-align: right
}
.peo_num{
    color: #257FCB;
}
.comment{
    width: 20%;
    display: inline-block;
    color: #9999
}
.com_num{
    color: #257FCB;
}
.new_body{
    width: 96%;
    padding: 2%;
    font-size: 30rpx;
    color: #333
}
