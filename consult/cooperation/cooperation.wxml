        <swiper-item>
            <scroll-view scroll-y  bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" class='scroll_news'>
                <view class='talents' wx:for='{{person}}' wx:key='' id='{{item.id}}'>
                    <view class='tal_left'>
                        <image src='{{host+item.img}}'></image>
                    </view>
                    <view class='tal_rig'>
                        <view style='height:50rpx;'>
                            <text class='tal_name'>{{item.name}}</text>
                            <text class='tal_year'>{{item.age}}岁</text>
                        </view>
                        <view class='xian'></view>
                        <view class='per_tex'>{{item.content}}</view>
                    </view>
                </view>
            </scroll-view>
        </swiper-item>
        <swiper-item>
            <scroll-view scroll-y  bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" class='scroll_news'>
                <view class='share' wx:for='{{project}}' wx:key=''>
                    <view class='share_left'>
                        <image src='{{host+item.img}}'></image>
                    </view>
                    <view class='share_right'>
                        <view class='share_right_top'>{{item.name}}</view>
                        <view class='introduce'>{{item.content}}</view>
                    </view>
                </view>
            </scroll-view>
        </swiper-item>
        <swiper-item>
            <scroll-view scroll-y  bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" class='scroll_news'>
                <view class='export' wx:for='{{output}}' wx:key=''>
                    <view class='extop'>
                        <text style='color:#257FCB;font-size:20rpx'>●</text>
                        <text style='margin-left:20rpx'>{{item.title}}</text>
                    </view>
                    <view class='ext_tex'>{{item.content}}</view>
                </view>
            </scroll-view>
        </swiper-item>
    </swiper>
</view>