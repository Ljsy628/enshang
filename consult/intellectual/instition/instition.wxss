.aptitude_box{
    width: 96%;
    padding: 20rpx 2%;
}
.aptitude_min{
    height: 12rem;
    width: 40%;
    margin-left: 4%;
    display: inline-block;
    margin-bottom: 1rem;
    padding: 2%;
    border: 1px #eee solid;
    border-radius: 5px
}
.apt_pic{
    height: 5rem;
    width: 100%;
}
.apt_pic image{
    height: 100%;
    width: 100%;
    border-radius: 5px
}
.apt_name{
    width: 100%;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-size: 30rpx;
    margin-top: 20rpx;
}
.apt_detail{
    width: 100%;
    height: 100rpx;
    text-overflow: -o-ellipsis-lastline; 
    overflow: hidden; 
    text-overflow: ellipsis; 
    display: -webkit-box; 
    -webkit-line-clamp: 2; 
    -webkit-box-orient: vertical; 
    margin-top: 10rpx;
    font-size: 28rpx;
    color: #666
}
.apt_btn{
    height: 70rpx;
    line-height: 70rpx;
    width: 98%;
    background: #257fcb;
    color: #fff;
    font-size: 28rpx
}