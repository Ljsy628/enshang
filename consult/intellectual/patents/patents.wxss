.aptitude_box{
    width: 96%;
    padding: 20rpx 2%;
}
.aptitude_min{
    height: 410rpx;
    width: 40%;
    margin-left: 4%;
    display: inline-block;
    margin-bottom: 100rpx;
    padding: 2%;
    border: 1px #eee solid;
    border-radius: 5px
}
.apt_pic{
    height: 5rem;
    width: 100%;
}
.apt_pic image{
    height: 100%;
    width: 100%;
    border-radius: 5px
}
.apt_name{
    width: 100%;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-size: 28rpx;
    margin-top: 20rpx;
    text-align: center
}
.apt_detail{
    width: 100%;
    height: 120rpx;
    text-overflow: -o-ellipsis-lastline; 
    overflow: hidden; 
    text-overflow: ellipsis; 
    display: -webkit-box; 
    -webkit-line-clamp: 2; 
    -webkit-box-orient: vertical; 
    margin-top: 10rpx;
    font-size: 28rpx;
    color: #666
}
.apt_btn{
    height: 60rpx;
    line-height: 60rpx;
    width: 98%;
    background: #257fcb;
    color: #fff;
    font-size: 30rpx;
    margin-top: 20rpx
}
.tag{
    font-size: 26rpx;
    color: #999;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: center;
    width: 100%;
}
.search_box{
    height: 80rpx;
    margin-top: 20rpx;
    width: 96%;
    margin-left: 2%;
    display: flex;
    flex-direction: row;
}
.patent{
    height: 80rpx;
    line-height: 80rpx;
    width: 30%;
    font-size: 28rpx;
    color: #257fcb;
    border: 1px #eee solid;
    display: flex;
    flex-direction: row;
    text-align: center;
    justify-content: space-around;
    border-radius: 4px;
    overflow: hidden
}
.patent image{
    height: 30rpx;
    width: 30rpx;
    margin-top: 25rpx;
}
.search{
    width: 61%;
    padding: 0 2%;
    margin-left: 5%;
    height: 80rpx;
    border:1px #eee solid;
    border-radius: 5px;
    display: flex;
    flex-direction: row;
}
.search input{
    height: 60rpx;
    margin-top: 10rpx;
    font-size: 28rpx
}
.search_pic image{
    height: 40rpx;
    width: 40rpx;
    margin-top: 20rpx;
    margin-right: 10rpx;
}
