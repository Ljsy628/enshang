/* 企业入驻 */
.info_box{
    height: 240rpx;
    width: 100%;
    background: #fff;
}
.info_left{
    height: 280rpx;
    width: 40%; 
    display: inline-block;
    position: relative;
    /* margin-top: 5% */
}
.info_left image{
    height: 70%;
    width: 80%;
    position: absolute;
    border-radius: 5px;
    left:10%;
    top:15%
}
.info_right{
    display: inline-block;
    width: 60%;
    text-align: left;
    vertical-align: top;
    padding-top: 5%
}
.info_right_a{
    font-size: 28rpx
}
.info_right_b{
   font-size: 22rpx ;
   margin-top: 10rpx
}
.info_price{
    color: #e02626;
    font-size: 26rpx;
    font-weight: bold;
    margin-top: 20rpx
}
.info_btn{
    display: inline-block;
    width: 100%;
    margin-top: 12rpx
}
.info_btn button{
    margin-right:50rpx;
    float:right;
    height: 60rpx;
    width: 130rpx;
    background: #257FCB;
    color: #fff;
    border-radius: 8rpx;
    text-align: center;
    font-size: 24rpx;
    line-height: 60rpx;
    }
/* 入驻申请 */
.apply_box{
    height: 500px;
    width: 100%;
}
.basic_info{
    height: 280rpx;
    width: 100%;
    background: #fff;
    margin-top: 20rpx;
}
.company_info{
    height: 766rpx;
    width: 100%;
    background: #fff
    }
.basic_top{
    height: 60rpx;
    line-height: 60rpx;
    padding: 20rpx;
    text-align: left;
    border-bottom: 1px #E6E6E6 solid;
    color: #8c8c8c;
    font-size: 26rpx;
}
.basic_inp{
    height: 45rpx;
    vertical-align: middle;
    padding: 20rpx;
    text-align: left;
    color: #333;
    font-size: 26rpx;
}
.basic_inps{
    height: 45rpx;
    vertical-align: middle;
    padding: 20rpx;
    text-align: left;
    color: #333;
    font-size: 26rpx;
    border-bottom: 1px #E6E6E6 solid;
}
.basic_name{
    display: inline-block;
    font-size: 27rpx;
    color: #333333;
    width: 20%
}
.basic_input{
    width: 60%;
    display: inline-block;
    vertical-align: middle;
    font-size: 26rpx;
    margin-left: 10%;
    color: #E6E6E6
}

.basic_btn{
    margin-top: 10%;
    background-color: #257FCB;
    color: #fff;
    font-size: 35rpx;
    height:3rem;
    line-height:3rem;
    width: 90%;
    margin-left: 5%;
}